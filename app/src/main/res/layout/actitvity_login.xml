<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:fontFamily="@font/montserrat"
    android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/ic_thunderbird96"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:elevation="10dp"
            android:id="@+id/txtEmailLogin"
            android:inputType="textEmailAddress"
            android:hint="Email Address"
            android:textSize="14dp"
            android:textColorHint="#000000"
            android:background="@drawable/round_editext"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="10dp"
            android:padding="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"/>

        <EditText
            android:elevation="10dp"
            android:id="@+id/txtPassLogin"
            android:inputType="textPassword"
            android:hint="Password"
            android:textSize="14dp"
            android:textColorHint="#000000"
            android:background="@drawable/round_editext"
            android:padding="15dp"
            android:layout_marginHorizontal="25dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"/>



        <TextView
            android:id="@+id/txtForgotPass"
            android:text="Forgot your password?"
            android:textColor="#000000"
            android:textSize="14dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            />

        <Button
            android:elevation="10dp"
            android:id="@+id/btnLogin"
            android:text="LOGIN"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_violet"
            android:layout_width="181dp"
            android:layout_height="48dp"
            android:fontFamily="@font/montserrat"/>
        <TextView
            android:id="@+id/txtSignUp"
            android:text="Don't have any account?"
            android:textColor="#000000"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:clickable="true"
            android:fontFamily="@font/montserrat"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <ImageView
                    android:elevation="2dp"
                    android:src="@drawable/ic_google"
                    android:padding="7dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/btn_circle_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:elevation="2dp"
                    android:src="@drawable/ic_facebook_2"
                    android:padding="7dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/btn_circle_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
</LinearLayout>